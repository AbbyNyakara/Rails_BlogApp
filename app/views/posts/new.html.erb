<div>
  <h2>Create Post </h2>
  <%= form_with model: @post, url: user_posts_path, method: :post do |form| %>
    <%= form.hidden_field :comments_counter, value:0 %>
    <%= form.hidden_field :likes_counter, value:0 %>
    <%= form.label :title,"Title", class:'label' %>
    <%= form.text_field :title, placeholder: 'Title of the post...' %>
    <%= form.label :text, "Content", class:'label' %>
    <%= form.text_area :text, placeholder: 'Write your post...' %>
    <%= form.submit "Submit Post", class:"submit-btn", id:"post-btn" %>
<% end %>
</div>